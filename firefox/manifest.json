{
  "manifest_version": 2,
  "name": "Prompt Pins for ChatGPT",
  "version": "1.3.0",
  "description": "Save questions for later without breaking conversational flow. All data stored locally - nothing leaves your browser.",
  "browser_specific_settings": {
    "gecko": {
      "id": "{0cd592bb-262a-4c96-92d9-630bcf0d7f1e}",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": [
    "storage",
    "contextMenus",
    "*://chat.openai.com/*",
    "*://chatgpt.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "create-pin": {
      "suggested_key": {
        "default": "Ctrl+Alt+P",
        "mac": "Command+Alt+P"
      },
      "description": "Create a pin from selected text"
    },
    "send-immediately": {
      "suggested_key": {
        "default": "Ctrl+Alt+S",
        "mac": "Command+Alt+S"
      },
      "description": "Send selected text immediately (no pin)"
    },
    "use-next-pin": {
      "suggested_key": {
        "default": "Ctrl+Alt+N",
        "mac": "Command+Alt+N"
      },
      "description": "Use the next pin in queue"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  }
}
